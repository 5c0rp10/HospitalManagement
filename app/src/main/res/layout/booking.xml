<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <Spinner
        android:id="@+id/s"
        android:layout_width="246dp"
        android:layout_height="84dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/textView2" />

    <Spinner
        android:id="@+id/s1"
        android:layout_width="248dp"
        android:layout_height="77dp"
        android:layout_alignStart="@+id/s"
        android:layout_alignTop="@+id/signin" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="109dp"
        android:layout_height="84dp"
        android:layout_above="@+id/signin"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:text="Department :"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/signin"
        android:layout_width="109dp"
        android:layout_height="77dp"
        android:layout_above="@+id/Birthday"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:text="Doctor Name :"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/Birthday"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="118dp"
        android:layout_toEndOf="@+id/signin"
        android:ems="10"
        android:hint="Booking date"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Birthday"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="34dp"
        android:text="Submit" />


</RelativeLayout>